
extends layout

block content

	h1 User input forms

	form(action="SEND CONTENTS HERE" method="post")

		p: h2(Likes)
		div(id="dynin")
			p:Your likes here: 
			p: input(type="text" name="likes" value="Required" required)
		input(id="textButton" type="button" value="Add another text input")
		
		p: h2(Allergies or dietary requirements)
		div(id="dynin2")
			p: our allergies here: 
			p: input(type="text" name="allergies")
		input(id="textButton2" type="button" value="Add another text input")
		
		p: h2(Hates)
		div(id="dynin3")
			p: Your hates here:
			p: input type="text" name="hates"
		input(id="textButton3" type="button" value="Add another text input")
		
		p: h2(Address)
		p: House number: input(type="text" name="address1")
		p: Street name: input(type="text" name="address2")
		p: Town/city: input(type="text" name="address3")
		p: Postcode: input(type="text" name="address4")
		p: Country: input(type="text" name="address5")
		
		p: input(type="submit")
		
	script(src="addin.js" type='text/javascript')